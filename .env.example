# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_NAME=payment_api
DATABASE_SYNC=false
DATABASE_LOGGING=false

# =================================
# MERCADO PAGO CONFIGURATION
# =================================
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers
MERCADO_PAGO_ACCESS_TOKEN=your_mercado_pago_access_token
MERCADO_PAGO_PUBLIC_KEY=your_mercado_pago_public_key

# Para sandbox/testes, use as credenciais de teste:
# MERCADO_PAGO_ACCESS_TOKEN=TEST-1234567890123456-123456-abcdef1234567890abcdef1234567890-123456789
# MERCADO_PAGO_PUBLIC_KEY=TEST-12345678-1234-1234-1234-123456789012

# =================================
# APPLICATION CONFIGURATION
# =================================
PORT=3000
NODE_ENV=development

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# =================================
# SECURITY CONFIGURATION
# =================================
# JWT_SECRET=your_jwt_secret_key (para futuras implementações)
# RATE_LIMIT_TTL=60 (para futuras implementações)
# RATE_LIMIT_LIMIT=100 (para futuras implementações)

# =================================
# LOGGING CONFIGURATION
# =================================
LOG_LEVEL=debug
LOG_FORMAT=dev

# =================================
# WEBHOOK CONFIGURATION
# =================================
# URL base para configurar webhooks do Mercado Pago
# WEBHOOK_BASE_URL=https://your-domain.com

# =================================
# TESTING CONFIGURATION
# =================================
# Configurações específicas para testes
TEST_DATABASE_NAME=payment_api_test
TEST_DATABASE_SYNC=true