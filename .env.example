# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV=development
PORT=3000

# =================================
# DATABASE CONFIGURATION
# =================================
# Para produção, configure com suas credenciais reais
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_NAME=payment_api

# =================================
# AUTHENTICATION CONFIGURATION
# =================================
# JWT_SECRET deve ter pelo menos 32 caracteres em produção
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-in-production
JWT_EXPIRES_IN=24h

# =================================
# REDIS CACHE CONFIGURATION
# =================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_needed
REDIS_DB=0
CACHE_TTL=300

# =================================
# TEMPORAL.IO CONFIGURATION
# =================================
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# =================================
# MERCADO PAGO CONFIGURATION
# =================================
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers
# Para desenvolvimento/testes, use credenciais TEST-*
# Para produção, use credenciais PROD-*
MERCADO_PAGO_ACCESS_TOKEN=TEST-8886272900741529-110914-675d7779f9c8cd381223ca47e24575f9-658413743
MERCADO_PAGO_PUBLIC_KEY=TEST-dc9d59b5-597f-49ae-8aa5-07ca28c3317f

# URLs de webhook e redirecionamento
MERCADO_PAGO_WEBHOOK_URL=https://your-domain.com/api/webhook/mercado-pago
MERCADO_PAGO_SUCCESS_URL=https://your-domain.com/payment/success
MERCADO_PAGO_FAILURE_URL=https://your-domain.com/payment/failure
MERCADO_PAGO_PENDING_URL=https://your-domain.com/payment/pending

# =================================
# RATE LIMITING CONFIGURATION
# =================================
# TTL em millisegundos (60000 = 1 minuto)
THROTTLE_TTL=60000
# Limite de requisições por TTL
THROTTLE_LIMIT=100

# =================================
# LOGGING CONFIGURATION
# =================================
# Níveis: error, warn, info, debug
LOG_LEVEL=info

# =================================
# TESTING CONFIGURATION
# =================================
# Configurações específicas para testes (opcional)
TEST_DATABASE_NAME=payment_api_test